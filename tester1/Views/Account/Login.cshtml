@using tester1.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<style>
    #socialLoginForm h4 {
        display: none;
    }
</style>


<head>
    <title>Login V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/formLogin/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/Content/formLogin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!--===============================================================================================-->
    <link href="~/Content/formLogin/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/formLogin/vendor/animate/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/formLogin/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/formLogin/vendor/select2/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/formLogin/css/util.css" rel="stylesheet" />
    <link href="~/Content/formLogin/css/main.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div style="position:relative" id="loginForm" class="wrap-login100">
                <div style=" position: absolute; left: 4%; top: 6%;" class="text-center">
                    <a class="txt2" href="/Home/Index">
                        Trở về
                        <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/formLogin/images/img-01.png" alt="IMG">
                </div>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <form class="login100-form validate-form">
                        <span class="login100-form-title">
                            Member Login
                        </span>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                            @Html.TextBoxFor(m => m.Email, new { @class = "input100", placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>



                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            @Html.PasswordFor(m => m.Password, new { @class = "input100", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="container-login100-form-btn">
                            <button type="submit" class="login100-form-btn">
                                Login
                            </button>
                        </div>

                        <div class="text-center p-t-12">
                            <span class="txt1">
                                @Html.ActionLink("Forgot your password?", "ForgotPassword")
                            </span>

                        </div>



                        <div class="text-center p-t-136">
                            <a class="txt2" href="#">
                                @Html.ActionLink("Register as a new user", "Register")
                                <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                            </a>
                        </div>

                    </form>
                    <section style="position: absolute; right: 20%; top: 70%; " id="socialLoginForm">
                        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    </section>

                }

            </div>

        </div>
    </div>



    <!--===============================================================================================-->
    <script src="~/Content/formLogin/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/formLogin/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/formLogin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/formLogin/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/formLogin/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="js/main.js"></script>

</body>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}