@model  IEnumerable<tester1.Models.ShipperViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Map</title>
    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <i class='fas fa-shipping-fast' style='font-size:48px;color:red'></i>
    <h2>Shipper Address: @Model.ShipperAddress</h2>
    <h2>Order Address: @Model.OrderAddress</h2>
    <div id="map"></div>

    <script>
        function initMap() {
            var shipperLocation = { lat: @Model.ShipperLatitude, lng: @Model.ShipperLongitude };
            var orderLocation = { lat: @Model.OrderLatitude, lng: @Model.OrderLongitude };

            var map = new google.maps.Map(document.getElementById('map'), {
                center: shipperLocation,
                zoom: 12
            });

            var shipperMarker = new google.maps.Marker({
                position: shipperLocation,
                map: map,
                title: 'Shipper Location'
            });

            var orderMarker = new google.maps.Marker({
                position: orderLocation,
                map: map,
                title: 'Order Location'
            });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=@Model.GoogleMapsAPIKey&callback=initMap"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</body>
</html>
