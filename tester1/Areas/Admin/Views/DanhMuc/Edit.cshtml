@model tester1.Models.DanhMuc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sửa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Danh Mục</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDM)

        <div class="form-group">

            <div class="col-md-10">
                <strong>Tên danh mục</strong>
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn-icon-split btn btn-success" type="submit">
                    <span class="icon text-white">
                        <i class="fas fa-check"></i>
                        <span style="padding : 0" class="text">
                            Lưu
                        </span>
                    </span>
                </button>

            </div>
        </div>

    </div>
}

<div>
    <button class="btn-icon-split btn btn-secondary" type="button" onclick="location.href='@Url.Action("DanhMuc", "DanhMuc")'">
        <span class="icon text-white">
            <i class="fas fa-arrow-right"></i>
            <span style="padding : 0" class="text">
                Trở về
            </span>
        </span>
    </button>

</div>
