@model tester1.Models.DonHang
@using PagedList;
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã đơn hàng</label>
                        <p class="form-control">@Model.MaDH</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Họ tên khách</label>
                        <p class="form-control">@Model.Ten</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tổng tiền</label>
                        <p class="form-control">@tester1.Common.Common.FormatNumber(Model.TongTien, 0) đ</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <p class="form-control">@Model.Sdt</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày tạo</label>
                        <p class="form-control">@Model.NgayDatHang.Value.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-control">@Model.Email</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Lời nhắn</label>
                        <p class="form-control">@Model.Ghichu</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Phương thức thanh toán</label>
                        <p class="form-control">@Model.PhuongThucThanhToan</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Quận</label>
                        <p class="form-control">@Model.Quan</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <p class="form-control">@Model.DiaChi</p>
                        <button class="btn btn-primary" id="viewMapBtn" data-order-id="@Model.MaDH">Xem Vị Trí Đơn Hàng</button>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-12">
                    <h2>Danh sách sản phẩm</h2>
                </div>
                <div class="col-12">
                    @Html.Action("Partial_SanPham", "DonHang", new { id = Model.MaDH })
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->


<script>
    // get id định vị
    $(document).ready(function () {
        $('.viewMapBtn').click(function () {
            var orderId = $(this).data('id');

            $.ajax({
                url: '/Geocode/adress',
                type: 'POST',
                data: { orderId: orderId },
                success: function (response) {
                    // Xử lý kết quả trả về nếu cần
                    console.log(orderId); // In MaDH ra console log
                    console.log(response);
                },
                error: function (xhr, status, error) {
                    console.error(error);
                    // Xử lý lỗi nếu có
                }
            });
        });
    });
</script>
